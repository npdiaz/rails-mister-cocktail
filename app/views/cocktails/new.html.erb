<div class="navbar-wagon">
  <!-- Logo -->
  <%= image_tag "logo.png", alt: "cocktails", width: 200 %>

  <div class="navbar-wagon-right">
    <div class= "navbar-wagon-item navbar-wagon-link"><%= link_to "All cocktails", cocktails_path %> </div>
    <div class= "navbar-wagon-item navbar-wagon-link"><%= link_to "Add a cocktail", new_cocktail_path %> </div>
  </div>
</div>

<div class='form-container'>
      <h3>Add a new cocktail</h3>
      <div class="form-for-new">
          <%= form_for(@cocktail) do |f| %>
            <div class="form‐group">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form‐control' %>
            </div>
            <div class="form‐group">
              <%= f.label :ingredients %>
              <%= f.text_field :ingredients, class: 'form‐control', value:'' %>
            </div>
            <%= f.submit class: 'btn btn‐primary' %>
          <% end %>
      </div>
    </div>
  </div>
</div>
